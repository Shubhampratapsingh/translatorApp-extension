{
  "short_name": "QuickLator",
  "name": "QuickLator",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Bridging Gaps, Real-time Translations.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Bridging Gaps, Real-time Translations."
  },
  "permissions": ["storage", "tabs", "activeTab", "cookies", "windows"],
  "host_permissions": ["http://localhost/*", "http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  }
}
